{# src/Rw/BlogBundle/Resources/views/Blog/formulaire.html.twig #}

<h3>Saisie du billet :</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
	
		<div class="form-group">
		{# Génération du label. #}
			{{ form_label(form.title, "Titre du billet",{'label_attr': {'class': 'col-sm-3 control-label'}} ) }}
		{# Affichage des erreurs pour ce champ précis. #}
			{{ form_errors(form.title) }}
		{# Génération de l'input. #}
			<div class="col-sm-6">
				{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.content, "Contenu du billet", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.content) }}
			<div class="col-sm-6">
				{{ form_widget(form.content, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.author, "Auteur du billet", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.author) }}
			<div class="col-sm-6">
				{{ form_widget(form.author, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-3 control-label' }} ) }}
			{{ form_errors(form.date) }}
			<div class="col-sm-4">
				{{ form_widget(form.date, {'attr': {'class': 'form-control'}} ) }}
			</div>
		</div>
		{# Génération du label + error + widget pour un champ #}
		{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
		{# form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) #}
		<input type="submit" class="btn btn-primary" >
		
		{# Génération automatique des champs pas encore écrits.
		Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
		et tous les champs cachés (type « hidden »). #}
		{{ form_rest(form) }}

	{# Fermeture de la balise <form> du formulaire HTML #}
	{{ form_end(form) }}
	
</div>